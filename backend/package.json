{
  "name": "cloth-recommendation-backend",
  "version": "1.0.0",
  "description": "Minimal Express backend for Razorpay payment integration",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --verbose",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:controllers": "jest __tests__/controllers",
    "test:utils": "jest __tests__/utils",
    "test:routes": "jest __tests__/routes"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["<rootDir>/jest.setup.js"],
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "Razorpay/**/*.js",
      "!Razorpay/**/*.test.js",
      "!Razorpay/__tests__/**"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ],
    "verbose": true,
    "testTimeout": 10000
  },
  "keywords": [
    "razorpay",
    "payment",
    "express",
    "supabase"
  ],
  "author": "Rahul Mirji",
  "license": "ISC",
  "dependencies": {
    "@supabase/supabase-js": "^2.45.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "razorpay": "^2.9.4"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "supertest": "^7.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
